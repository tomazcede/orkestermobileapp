<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrkesterMobileApp.Pages.Member"
             Title="OrkesterApp">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="welcomelabel" Text=""
                HorizontalOptions="CenterAndExpand" FontSize="Large" Padding="20"/>
            <Label Text="Your performances:"
                HorizontalOptions="CenterAndExpand" />
            <ListView x:Name="performanceListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding venue.venueName}" Detail="{Binding date}" IsEnabled="False" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>